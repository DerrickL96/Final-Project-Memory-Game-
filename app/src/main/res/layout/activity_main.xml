<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.cardexample.MainActivity"
    android:gravity="center">


    <ImageView
        android:id="@+id/image"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:src="@drawable/cardback"
        android:clickable="true"
        android:onClick="imagePressed"
        android:padding="3dp"/>
    <Button
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        android:layout_below="@id/rulesButton"
        android:onClick="checkPressed"/>

    <ImageView
        android:id="@+id/image2"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:src="@drawable/cardback"
        android:clickable="true"
        android:onClick="imagePressed2"
        android:layout_below="@id/image"
        android:padding="3dp"/>

    <ImageView
        android:id="@+id/image3"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:src="@drawable/cardback"
        android:clickable="true"
        android:onClick="imagePressed3"
        android:layout_below="@id/image2"
        android:padding="3dp"/>

    <ImageView
        android:id="@+id/image4"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:src="@drawable/cardback"
        android:clickable="true"
        android:onClick="imagePressed4"
        android:layout_below="@id/image3"
        android:padding="3dp"/>


    <ImageView
        android:id="@+id/image5"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:src="@drawable/cardback"
        android:clickable="true"
        android:onClick="imagePressed5"
        android:layout_toRightOf="@id/image"
        android:padding="3dp"/>

    <ImageView
        android:id="@+id/image6"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:src="@drawable/cardback"
        android:clickable="true"
        android:onClick="imagePressed6"
        android:layout_toRightOf="@id/image2"
        android:layout_below="@id/image5"
        android:padding="3dp"/>

    <ImageView
        android:id="@+id/image7"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:src="@drawable/cardback"
        android:clickable="true"
        android:onClick="imagePressed7"
        android:layout_toRightOf="@id/image2"
        android:layout_below="@id/image6"
        android:padding="3dp"/>

    <ImageView
        android:id="@+id/image8"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:src="@drawable/cardback"
        android:clickable="true"
        android:onClick="imagePressed8"
        android:layout_toRightOf="@id/image"
        android:layout_below="@id/image7"
        android:padding="3dp"/>


    <ImageView
        android:id="@+id/image9"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:src="@drawable/cardback"
        android:clickable="true"
        android:onClick="imagePressed9"
        android:layout_toRightOf="@id/image5"
        android:padding="3dp"/>

    <ImageView
        android:id="@+id/image10"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:src="@drawable/cardback"
        android:clickable="true"
        android:onClick="imagePressed10"
        android:layout_toRightOf="@id/image5"
        android:layout_below="@id/image9"
        android:padding="3dp"/>


    <ImageView
        android:id="@+id/image11"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:src="@drawable/cardback"
        android:clickable="true"
        android:onClick="imagePressed11"
        android:layout_toRightOf="@id/image5"
        android:layout_below="@id/image10"
        android:padding="3dp"/>


    <ImageView
        android:id="@+id/image12"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:src="@drawable/cardback"
        android:clickable="true"
        android:onClick="imagePressed12"
        android:layout_toRightOf="@id/image5"
        android:layout_below="@id/image11"
        android:padding="3dp"/>


    <ImageView
        android:id="@+id/image13"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:src="@drawable/cardback"
        android:clickable="true"
        android:onClick="imagePressed13"
        android:layout_toRightOf="@id/image11"
        android:layout_below="@id/image11"
        android:padding="3dp"/>

    <ImageView
        android:id="@+id/image14"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:src="@drawable/cardback"
        android:clickable="true"
        android:onClick="imagePressed14"
        android:layout_toRightOf="@id/image10"
        android:padding="3dp"/>

    <ImageView
        android:id="@+id/image15"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:src="@drawable/cardback"
        android:clickable="true"
        android:onClick="imagePressed15"
        android:layout_toRightOf="@id/image10"
        android:layout_below="@id/image14"
        android:padding="3dp"/>

    <ImageView
        android:id="@+id/image16"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:src="@drawable/cardback"
        android:clickable="true"
        android:onClick="imagePressed16"
        android:layout_toRightOf="@id/image10"
        android:layout_below="@id/image15"
        android:padding="3dp"/>

    <Button
        android:id="@+id/rulesButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/image4"
        android:layout_alignStart="@+id/image4"
        android:layout_below="@+id/image4"
        android:layout_marginTop="17dp"
        android:text="Rules"
        android:clickable="true"
        android:onClick="rulesPressed"/>


    <TextView
        android:id="@+id/points"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/rulesButton"
        android:layout_toEndOf="@+id/image8"
        android:layout_toRightOf="@+id/image8"
        android:textSize="40dp"
        android:text="Points: "/>




</RelativeLayout>
